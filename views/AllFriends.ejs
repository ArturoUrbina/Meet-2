<body>
    <%include partials/header%>
<div class="container">
  <div class="row">
    <div class="col mt-4 text-center">
        <%if(amigos.length>0) { %>
        <h3 class="card-title">
            Estos son todos tus amigos, selecciona a uno para chatear con el!!
        </h3>
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <td>Foto</td>
            <td>Nombre</td>
            <td>Gusto</td>
            <td>Hacer Amigo de Verdad</td>
            <td>Bloquear</td>
          </tr>
        </thead>
        <tbody>
          
            <% for(var i = 0; i < amigos.length; i++) { 
                if(amigos[i].isf_am){
                  if(!amigos[i].ref_am&&!amigos[i].blocked){%>
              <tr onclick="window.location='/chatAmigo/<%=amigos[i].id_us%>'" style="cursor: pointer;">
                <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 20rem; height: 20rem;" src="<%=amigos[i].ftp_us%>" alt=""></td>
                <td><%=amigos[i].use_us%></td>
                <td><%=amigos[i].nom_gus%></td>
                <td>
                  <a class="btn btn-lg btn-success center" href="/trueFriend/<%=amigos[i].id_us%>" role="button">Hacer amigo de Verdad</a>
                </td>
                <td>
                  <a class="btn btn-lg btn-danger center" href="/RP/<%=amigos[i].id_us%>" role="button">Bloquear (Esto es irreversible)</a>
                </td>
              </tr>
            <% }else if(amigos[i].ref_am&&!amigos[i].blocked){%>
              <tr onclick="window.location='/chatAmigo/<%=amigos[i].id_us%>'" style="cursor: pointer;">
                <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 20rem; height: 20rem;" src="<%=amigos[i].fot_us%>" alt=""></td>
                <td><%=amigos[i].nom_us%></td>
                <td><%=amigos[i].nom_gus%></td>
                <td>Ya son amigos de verdad!</td>
                <td>
                  <a class="btn btn-lg btn-danger center" href="/RP/<%=amigos[i].id_us%>" role="button">Bloquear (Esto es irreversible)</a>
                </td>
              </tr>
              <%}else if(!amigos[i].ref_am&&amigos[i].blocked){%>
                <tr onclick="window.location='/chatAmigo/<%=amigos[i].id_us%>'" style="cursor: pointer;">
                  <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 20rem; height: 20rem; -webkit-filter: grayscale(100%); -moz-filter: grayscale(100%); -ms-filter: grayscale(100%); -o-filter: grayscale(100%); filter: grayscale(100%);" src="<%=amigos[i].ftp_us%>" alt=""></td>
                  <td><%=amigos[i].use_us%></td>
                  <td><%=amigos[i].nom_gus%></td>
                  <td>
                    No Fueron amigos de verdad
                  </td>
                  <td>
                    Ya Has Bloqueado a <%=amigos[i].use_us%>
                  </td>
                </tr>
                <% }else if(amigos[i].ref_am&&amigos[i].blocked){%>
                  <tr onclick="window.location='/chatAmigo/<%=amigos[i].id_us%>'" style="cursor: pointer;">
                    <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 20rem; height: 20rem; -webkit-filter: grayscale(100%); -moz-filter: grayscale(100%); -ms-filter: grayscale(100%); -o-filter: grayscale(100%); filter: grayscale(100%);" src="<%=amigos[i].fot_us%>" alt=""></td>
                    <td><%=amigos[i].nom_us%></td>
                    <td><%=amigos[i].nom_gus%></td>
                    <td>Fueron amigos de verdad</td>
                    <td>
                      Ya Has Bloqueado a <%=amigos[i].nom_us%>
                    </td>
                  </tr>
              <%}
                } 
                }%>
        </tbody>
      </table>
      <%}else{%>
        <h3 class="card-title">
            Accede al área de match para hacer amigos
        </h3>
            <span class="d-block d-lg-block">
                <a href="/Match" class="btn btn-info -md-6 mt-4">Área De Match</a>
            </span>
      <%}%>
