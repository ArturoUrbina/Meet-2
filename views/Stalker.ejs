    <body>
        <% include partials/header %>
        <div class="row">
                <div class="col -md-6 mt-4 text-center">
                    <h3 class="card-title">
                        <%= data.nom_us%> || <%= data.use_us%>
                    </h3>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Foto</td>
                        <td>Nombre De Usuario</td>
                        <td>Contraseña</td>
                        <td>Grupo</td>
                        <td>Boleta</td>
                        <td>Usuario</td>
                        <td>Fecha De Nacimiento</td>
                        <td>Escuela</td>
                        <td>Carrera</td>
                        <td>Turno</td>
                        <td>Género</td>
                        <td>El Usuario es Administrador?</td>
                        <td>Acciones</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (data) { %>
                        <tr>
                            <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 10rem; height: 7rem;" src="<%=data.fot_us%>" alt=""></td>
                            <td><%= data.nom_us %></td>
                            <td><%= data.con_us %></td>
                            <td><%= data.gru_us %></td>
                            <td><%= data.bol_us %></td>
                            <td><%= data.use_us %></td>
                            <td><%= data.eda_us %></td>
                            <td><%= data.nom_es %></td>
                            <td><%= data.nom_car %></td>
                            <td><%= data.nom_tur %></td>
                            <td><%= data.nom_gen %></td>
                            <td><%var adm = ""; 
                            if(data.adm_us){
                                adm="Si";
                                }else{
                                adm="No";
                                }%><%=adm%></td>
                            <td>
                                <a href="#" class="btn btn-warning -md-6 mt-4">Modificar</a>
                                <a href="/delete/<%=data.id_us%>" class="btn btn-danger -md-6 mt-4">Eliminar</a>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
                </div>
            </div>
            <%if(data.nom_gus!=undefined){%>
            <div class="row">
                <div class="col -md-6 mt-4 text-center">
                    <h3 class="card-title">
                        Gustos De  <%= data.nom_us%>%>
                    </h3>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Gusto</td>
                        <td>Películas</td>
                        <td>Lectura</td>
                        <td>Musica</td>
                        <td>Videojuegos</td>
                        <td>Deportes</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (data) { %>
                        <tr>
                            <td><%= data.nom_gus %></td>
                            <td><%= data.nom_pel %></td>
                            <td><%= data.nom_lec %></td>
                            <td><%= data.nom_mus %></td>
                            <td><%= data.nom_vid %></td>
                            <td><%= data.nom_dep %></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
                </div>
            </div>
            <%}else{%>
              <div class="row">
                  <div class="col -md-6 mt-4 text-center">
                    <h3 class="card-title">
                        <%= data.nom_us%>%> Aún no configura sus gustos
                    </h3>
                </div>
              </div>
              <%}%>
        <%if(rev.length>0){%>
        <div class="row">
            <div class="col -md-6 mt-4 text-center">
                <h3 class="card-title">
                    Amigos de <%= data.nom_us%>
                </h3>
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <td></td>
                    <td>Foto</td>
                    <td>Nombre De Usuario</td>
                    <td>Contraseña</td>
                    <td>Grupo</td>
                    <td>Boleta</td>
                    <td>Usuario</td>
                    <td>Fecha De Nacimiento</td>
                    <td>El Usuario es Administrador?</td>
                    <td>Sanción</td>
                  </tr>
                </thead>
                <tbody>
                  <% if (rev) { %>
                    <% for(var i = 0; i < rev.length; i++) { %>
                      <tr>
                        <td><%= (i + 1) %></td>
                        <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 5rem; height: 5rem;" src="<%=rev[i].fot_us%>" alt=""></td>
                        <td><%= rev[i].nom_us %></td>
                        <td><%= rev[i].con_us %></td>
                        <td><%= rev[i].gru_us %></td>
                        <td><%= rev[i].bol_us %></td>
                        <td><%= rev[i].use_us %></td>
                        <td><%= rev[i].eda_us %></td>
                        <td><%var adm = ""; 
                          if(rev[i].adm_us){
                            adm="Si";
                              }else{
                            adm="No";
                              }%><%=adm%>
                        </td>
                        <td>
                            <a href="/Stalker/<%=rev[i].id_us%>" class="btn btn-primary -md-6 mt-4">Información Confidencial de <%= rev[i].nom_us %></a>
                        </td>   
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
        <%}else{%>
          <div class="row">
              <div class="col -md-6 mt-4 text-center">
                <h3 class="card-title">
                    <%= data.nom_us%>%> Aún no tiene ningún amigo
                </h3>
            </div>
          </div>
          <%}%>
        <%for(var i = 0; i < chat.length; i++){
          if(chat[i].length>0){%>
          <div class="row">
              <div class="col -md-6 mt-4 text-center">
                  <h3 class="card-title">
                      Mensajes Enviados a <%= rev[i].nom_us%>
                  </h3>
              <table class="table table-bordered table-hover table-striped">
                  <thead>
                  <tr>
                      <td></td>
                      <td>Foto</td>
                      <td>Nombre</td>
                      <td>Mensaje</td>
                  </tr>
                  </thead>
                  <tbody>
                  <% if (chat[i]) {
                      for(var j = 0; j < chat[i].length; j++) {
                        if(chat[i][j].sdr_ms){%>
                          <tr>
                              <td><%= (j + 1) %></td>
                              <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 10rem; height: 7rem;" src="<%=data.fot_us%>" alt=""></td>
                              <td><%= data.nom_us%></td>
                              <td><%= chat[i][j].msg_ms %></td>
                          </tr>
                        <%}else{%>
                      <tr>
                          <td><%= (j + 1) %></td>
                          <td><img class=".img-fluid img-thumbnail rounded-circle mx-auto mb-2" style="width: 10rem; height: 7rem;" src="<%=rev[i].fot_us%>" alt=""></td>
                          <td><%=rev[i].nom_us%></td>
                          <td><%= chat[i][j].msg_ms %></td>
                      </tr>
                      <% 
                      } 
                    }
                  } %>
                  </tbody>
              </table>
              </div>
          </div>
            <%}else{%>
              <div class="row">
                  <div class="col -md-6 mt-4 text-center">
                      <h3 class="card-title">
                          Mensajes Enviados a <%= rev[i].nom_us%>
                      </h3>
                  <table class="table table-bordered table-hover table-striped">
                      <thead>
                      <tr>
                          <td>No hay mensajes entre ellos</td>
                      </tr>
                      </thead>
                      <tbody>
                        </tbody>
                      </table>
                      </div>
                    </div>
            <%}
          }%>   
